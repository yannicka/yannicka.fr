// Inspiration  http//www.theverge.com/2012/2/24/2822891/windows-desktop-ui-concept

flex-display()
	display  -webkit-flex
	display  flex

/* integer */
flex-size(size = 1)
	-webkit-flex  size
	flex          size

/* row | column */
flex-direction(dir)
	-webkit-flex-direction  dir
	flex-direction          dir

/* integer */
flex-order(order)
	order  order

box-sizing(size)
	-webkit-box-sizing  size
	-moz-box-sizing     size
	-ms-box-sizing      size
	-o-box-sizing       size
	box-sizing          size

user-select(select)
	-webkit-user-select  select
	-moz-user-select     select
	-ms-user-select      select
	-o-user-select       select
	user-select          select

html, body
	margin     0
	padding    0
	width      100%
	height     100%
	overflow   hidden
	font-size  18px

body
	background  linear-gradient(to right, rgb(226, 174, 117), rgb(190, 192, 152))
	background  rgb(88, 109, 100)
	//background  url('../img/bg.jpg') center center

.window
	margin            0
	padding           0
	background-color  rgb(255, 255, 255)
	color             rgb(0, 0, 0)
	box-shadow        0 0 14px -2px rgba(0, 0, 0, .4)
	position          absolute
	flex-display()
	flex-direction(column)
	box-sizing(border-box)

	.title
		//background-color rgb(240, 240, 240)
		margin         0
		padding        3px
		color          rgb(54, 54, 54)
		font           bold 16px Consolas
		cursor         default
		height         25px
		word-wrap      break-word
		outline        none
		border-bottom  1px dotted rgb(128, 128, 128)
		box-sizing(border-box)
		user-select(none)

		&:hover
			cursor  move

	.content
		margin    0
		padding   0
		font      normal 16px Consolas
		width     100%
		height    120px
		overflow  auto
		flex-display()
		flex-size(1)

		textarea
			margin       0
			padding      3px
			width        100%
			height       100%
			border       none
			resize       none
			font-family  Consolas, sans-serif
			box-sizing(border-box)

			&:hover
			&:focus
				// code 

		ul.calendar
			margin      0
			padding     0
			list-style  none

			li
				margin   0
				padding  2px 4px

	.infos
		margin   0
		padding  2px
		height   16px

		.configs
			width       16px
			height      16px
			background  url('../img/configs.svg')
			float       left

			&:hover
				cursor  pointer

		.resizer
			width       16px
			height      16px
			background  url('../img/resizer.svg')
			float       right
			position    relative
			top         2px
			left        2px

			&:hover
				cursor  nw-resize

