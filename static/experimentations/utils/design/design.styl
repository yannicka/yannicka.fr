// Calculatrices
.calculator 
	width  100%
	.flex-display()
	.flex-direction(column)

	input 
		margin            0
		padding           4px
		border            none
		background-color  rgb(255, 255, 255)
		width             100%
		height            28px
		box-sizing(border-box)

	span 
		margin   0
		padding  4px
		width    100%
		flex-size(1)
		box-sizing(border-box)

.notelist 
	width  100%
	flex-display()
	flex-direction(row)

	ul 
		margin               0
		padding              0
		list-style-type      none
		list-style-position  outside
		font-family          "Arial", serif
		width                100px
		box-sizing(border-box)

	li 
		margin  0
		padding  0
		cursor   pointer

		&.active 
			color  red

	textarea 
		margin   0
		padding  4px
		flex-size(1)
		box-sizing(border-box)

.todolist 
	ul
		margin               0
		padding              0
		list-style-type      none
		list-style-position  outside
		font-family          "Arial", serif
		width                100px
		box-sizing(border-box)

	li
		margin   0
		padding  0

#contextmenu
	margin            0
	padding           0
	position          absolute
	background-color  rgb(255, 255, 255)
	border-radius     4px
	box-shadow        0 0 14px -2px rgba(0, 0, 0, .4)
	z-index           999
	display           none

	ul
		margin      0
		padding     0
		list-style  none

	li
		padding  4px 8px

		&:first-child
			border-radius  4px 4px 0 0

		&:last-child
			border-radius  0 0 4px 4px

		&:hover
			background-color  rgb(130, 200, 255)
			cursor            pointer
