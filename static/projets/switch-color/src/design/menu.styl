/* Menu principal
----------------- */
#menu
	margin  0 0 8px 0

	div
		margin       0 16px 20px 16px
		padding      0
		font-size    21px
		font-weight  bold
		cursor       pointer

	span
		margin          0
		padding         0
		letter-spacing  1.2px

	img
		margin          12px 24px 12px 12px
		padding         0
		vertical-align  middle

.btn-red
	red = rgb(240, 63, 86)
	border-bottom  4px solid red
	color          red

.btn-blue
	blue = rgb(70, 155, 208)
	border-bottom  4px solid blue
	color          blue

.btn-yellow
	yellow = rgb(250, 172, 67)
	border-bottom  4px solid yellow
	color          yellow
